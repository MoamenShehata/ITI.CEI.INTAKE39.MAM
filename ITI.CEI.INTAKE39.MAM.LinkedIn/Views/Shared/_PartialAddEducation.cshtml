@model LinkedInUserProfileViewModel

@{
    AjaxOptions ajaxOptions = new AjaxOptions()
    {
        HttpMethod = "POST",
        UpdateTargetId = "user_educations",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "$('#ModalAddEducation').modal('hide')"

    };
}





@using (Ajax.BeginForm("AddEducationAjax", "Account", ajaxOptions))
{
    <div class="modal fade bs-example-modal-lg" id="ModalAddEducation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add New Education</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(e => e.education.School)
                        @Html.TextBoxFor(e => e.education.School, new { @class = "form-control" })
                        @Html.ValidationMessageFor(e => e.education.School)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(e => e.education.Degree)
                        @Html.TextBoxFor(e => e.education.Degree, new { @class = "form-control" })
                        @Html.ValidationMessageFor(e => e.education.Degree)
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(e => e.education.StartDate)
                        @Html.TextBoxFor(e => e.education.StartDate, new { @class = "form-control" })
                        @Html.ValidationMessageFor(e => e.education.StartDate)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(e => e.education.EndDate)
                        @Html.TextBoxFor(e => e.education.EndDate, new { @class = "form-control" })
                        @Html.ValidationMessageFor(e => e.education.EndDate)
                    </div>

                    @Html.HiddenFor(e => e.education.FK_LinkedInUserId)
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>



}
