@model ITI.CEI.INTAKE39.MAM.LinkedIn.Models.RegisterViewModel

@{
    ViewBag.Title = "LinkedIn Log In Or Sign up";
    Layout = "~/Views/Shared/_My_Layout_Launch.cshtml";
}

<div class="background" style="background-image:url('/Images/LinkedInPeople.jpg');background-size:cover;height:600px">

</div>

<div class="reister_section">
    <div class="header">
        <h3>Be great at what you do</h3>
        <p>Get started - it's free.</p>
    </div>
    <div class="user_logins">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
            ///
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(m => m.Fname)
                    @Html.TextBoxFor(m => m.Fname, new { @class = "form-control Login_field" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(m => m.Lname)
                    @Html.TextBoxFor(m => m.Lname, new { @class = "form-control Login_field" })
                </div>
            </div>

            @*<div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(m => m.Age)
                    @Html.TextBoxFor(m => m.Age, new { @class = "form-control Login_field" })
                </div>
            </div>*@

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control Login_field" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control Login_field" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control Login_field" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="text-align:center">
                    <input type="submit" class="btn btn-primary " value="Join Now" style="width:120%;margin:auto;left:50%;transform:translateX(-18%)" />
                </div>
            </div>
        }
    </div>
</div>
<div class="search_section">
    <label>Find a colleague</label>
    <input type="text" name="name" value="" placeholder="First name" />
    <input type="text" name="name" value="" placeholder="Last name" />
    <button>Search</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
